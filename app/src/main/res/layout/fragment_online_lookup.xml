<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Grullo"
    tools:context=".FragmentOnlineLookup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:text="RECHERCHE en LIGNE" android:textColor="@color/Nickel"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <EditText android:id="@+id/txtSearchWord" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_weight="0.25" android:ems="10" android:inputType="textPersonName"/>
            <ImageView android:id="@+id/btnSearchWord" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="10dp" android:src="@drawable/ic_baseline_content_paste_search_24"/>
        </LinearLayout>
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="0.25">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
                <WebView android:id="@+id/txtWordDefinition" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="0.25"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>